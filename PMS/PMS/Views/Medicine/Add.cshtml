@model MedicineViewModel
@{
	ViewData["Title"] = "Add Medicine";
}
<div class="card card-body">
	<h1 class="card-header">
		Add Medicine
	</h1>
	<form class="card-body" method="post" asp-controller="Medicine" asp-action="Add">
